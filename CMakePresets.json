{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-platform",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "base-wasm",
      "hidden": true,
      "inherits": "base-platform",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/wasm.cmake"
      }
    },
    {
      "name": "base-windows",
      "hidden": true,
      "inherits": "base-platform",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/windows.cmake",
        "MSVC_ARCH": "x86"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio x86"
        }
      }
    },
    {
      "name": "Debug_wasm",
      "inherits": "base-wasm",
      "binaryDir": "${sourceDir}/build/wasm/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HOTRELOAD": "ON"
      }
    },
    {
      "name": "Debug_windows",
      "inherits": "base-windows",
      "binaryDir": "${sourceDir}/build/windows/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Release_wasm",
      "inherits": "base-wasm",
      "binaryDir": "${sourceDir}/build/wasm/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_WASM_STRIP": "ON"
      }
    },
    {
      "name": "Release_windows",
      "inherits": "base-windows",
      "binaryDir": "${sourceDir}/build/windows/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Release_windows_crinkler",
      "inherits": "Release_windows",
      "binaryDir": "${sourceDir}/build/windows/Release_Compressed",
      "cacheVariables": {
        "USE_CRINKLER": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug_wasm",
      "configurePreset": "Debug_wasm",
      "configuration": "Debug"
    },
    {
      "name": "Release_wasm",
      "configurePreset": "Release_wasm",
      "configuration": "Release"
    },
    {
      "name": "Debug_windows",
      "configurePreset": "Debug_windows",
      "configuration": "Debug"
    },
    {
      "name": "Release_windows",
      "configurePreset": "Release_windows",
      "configuration": "Release"
    }
  ]
}